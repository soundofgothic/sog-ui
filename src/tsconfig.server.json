{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "paths": {
      "@app/*": ["./app/*"],
      "@env/*": ["./environments/*"]
    },
    "baseUrl": "./",
    "module": "commonjs",
    "types": ["node"]
  },
  "exclude": ["test.ts", "**/*.spec.ts"],
  "angularCompilerOptions": {
    "entryModule": "app/app.server.module#AppServerModule"
  },
  "include": ["**/*.ts"]
}
